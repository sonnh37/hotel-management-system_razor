@page
@model NguyenHoangSon_NET1707_A02.Pages.Cart.IndexModel
@{
}
<form asp-page-handler="checkout" method="post">
    <!-- Modal -->
    <div class="modal fade" id="confirm-checkout" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Confirm checkout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Do you want to check out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Checkout</button>
                </div>
            </div>
        </div>
    </div>
    
    <h1>Cart List</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
    <div class="d-flex justify-content-end align-items-center">
        <div class="d-flex align-items-center flex-row" style="margin-right: 10px;">
            <div class="d-flex align-items-center me-5">
                <label style="font-size: 10px; margin-right: 10px" for="startDate">Start Date</label>
                <input type="date" asp-for="DateView.StartDate" id="startDate" class="form-control" required>
            </div>
            <div class="d-flex align-items-center">
                <label style="font-size: 10px; margin-right: 10px" class="label" for="endDate">End Date</label>
                <input type="date" asp-for="DateView.EndDate" id="endDate" class="form-control" required>
            </div>
        </div>
        <button type="button" data-bs-toggle="modal" data-bs-target="#confirm-checkout" style="margin: 10px; padding: 5px 10px;" class="btn btn-warning">Checkout</button>
    </div>
</form>
<table class="table table-hover table-bordered">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomDetailDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomMaxCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomPricePerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RoomInformation)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomDetailDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomMaxCapacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomPricePerDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.RoomId">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="total-container d-flex justify-content-end align-items-center">
    <div>Total:</div>
    <div id="totalPrice" style="margin-left: 10px;">@Model.TotalPrice</div>
</div>
