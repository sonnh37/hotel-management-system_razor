@page
@model NguyenHoangSon_NET1707_A02.Pages.Auths.LoginModel
@{
}

<div class="back" style="background: #e2e2e2;
  width: 100%;
  position: absolute;
  top: 0;
right: 0;
  bottom: 0;">


    <div class="div-center" style="width: 400px;
  height: 400px;
  background-color: #fff;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;

  bottom: 0;
  margin: auto;
  max-width: 100%;
  max-height: 100%;
  overflow: auto;
  padding: 1em 2em;
  border-bottom: 2px solid #ccc;
  display: table;">


        <div class="content" style="display: table-cell;
  vertical-align: middle;">


            <h3>Login</h3>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Message"]
                    </div>
                }
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" asp-for="LoginView.Email" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                    <span asp-validation-for="LoginView.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <input type="password" class="form-control" asp-for="LoginView.Password" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                    <span asp-validation-for="LoginView.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Log in" class="btn btn-primary btn-lg w-100" />
                </div>
            </form>


            <p class="w-100 d-flex justify-content-center my-2"><a href="/auths/forgot" class="link-primary link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover">Forgotten password?</a></p>
            <hr />
            <div class="w-100 d-flex justify-content-center">
                <button type="button" onclick="location.href='/auths/register'" class="btn btn-success btn-lg ">Create new account</button>
            </div>

        </div>
    </div>
</div>
