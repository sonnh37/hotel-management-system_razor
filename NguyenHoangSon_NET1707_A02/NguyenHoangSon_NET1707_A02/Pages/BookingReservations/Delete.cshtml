        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.BookingStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservation.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.Customer.CustomerFullName)
