@page
@model NguyenHoangSon_NET1707_A02.Pages.BookingReservations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BookingReservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservation.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.BookingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservation.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservation.BookingStatus)
        </dt>
        <dd class="col-sm-10">
            @if (Model.BookingReservation.BookingStatus == 1)
            {
                <span>Active</span>
            }
            else
            {
                <span>Deleted</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservation.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.Customer.CustomerId)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.BookingReservation.BookingReservationId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
