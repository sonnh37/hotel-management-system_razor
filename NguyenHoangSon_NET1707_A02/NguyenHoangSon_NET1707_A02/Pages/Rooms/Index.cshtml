@model NguyenHoangSon_NET1707_A02.Pages.Rooms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<section>
    <div class="container my-5">
        <header class="mb-4">
            <h3>Room List</h3>
        </header>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }

        <div class="row">
            @foreach (var item in Model.RoomInformation)
            {
                <div class="col-lg-3 col-md-6 col-sm-6">

                    <div class="card px-4 border shadow-0 mb-4 mb-lg-0">

                        <div class="card-body d-flex flex-column pt-3 border-top">
                            <div class="price-wrap mb-2">
                                <strong class="">
                                    #@Html.DisplayFor(modelItem => item.RoomNumber)
                                </strong>
                            </div>
                            <div>
                                <p>
                                    @Html.DisplayFor(modelItem => item.RoomDetailDescription)
                                </p>
                            </div>
                            <div class="price-wrap mb-2">
                                <span>
                                    Max Capacity: @Html.DisplayFor(modelItem => item.RoomMaxCapacity)
                                </span>
                            </div>
                            <div>
                                Type Room: @Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)
                            </div>
                            <div class="price-wrap mb-2">
                                <strong class="">
                                    Price: @Html.DisplayFor(modelItem => item.RoomPricePerDay)
                                </strong>
                            </div>



                            <div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
                                <form method="post">
                                    <input type="hidden" name="id" value="@item.RoomId" />
                                    <input type="submit" value="Add to cart" class="btn btn-outline-primary w-100" />
                                </form>

                            </div>
                        </div>

                    </div>


                </div>
            }

        </div>
    </div>
</section>
