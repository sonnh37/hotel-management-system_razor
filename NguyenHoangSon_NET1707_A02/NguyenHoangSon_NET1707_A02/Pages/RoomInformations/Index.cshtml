@{
    ViewData["Title"] = "Room List";
}

<form method="get">
    <input type="hidden" asp-for="pageNumber" id="pageNumber" value="@Model.pageNumber" />
    <!-- Other form elements -->
</form>

<h1>Room List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
<table class="table table-hover table-bordered">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomDetailDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomMaxCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomPricePerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomInformation[0].RoomType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tableBody"></tbody>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { pageNumber = (Model.pageNumber - 1) == 0 ? 1 : (Model.pageNumber - 1) })">Previous</a></li>
            @for (int i = 1; i <= Model.totalPages; i++)
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { pageNumber = i })">@i</a></li>
            }
            <li class="page-item"><a class="page-link" href="@Url.Action("Index", new { pageNumber = (Model.pageNumber + 1) > Model.totalPages ? Model.pageNumber : (Model.pageNumber + 1) })">Next</a></li>
        </ul>
    </nav>
